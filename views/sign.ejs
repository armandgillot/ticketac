    <div class="home">

        <div class="row">



            <!-- SIGN IN -->
            <div class="col-12 col-sm-6 text-center">

                <div class="formArea">

                    <h4 class="titleForm">Sign In : </h4>
                    <br>

                    <form action="users/sign-in" method="POST">
                        <div class="form-group">
                            <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                                placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-info">Confirm</button>
                    </form>

                </div>

            </div>


            <!-- SIGN UP -->
            <div class="col-12 col-sm-6 text-center">

                <div class="formArea">
                    <h4 class="titleForm">Sign Up : </h4>
                    <br>

                    <form action="users/sign-up" method="POST">
                        <div class="form-group">
                            <input name="usernameFromFront" type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input name="userfirstnameFromFront" type="text" class="form-control"
                                placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                                placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-info">Confirm</button>
                    </form>
                </div>

            </div>


